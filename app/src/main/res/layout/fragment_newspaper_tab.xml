<android.support.constraint.ConstraintLayout
    android:id="@+id/main_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_background_white">

    <android.support.design.widget.TabLayout
        android:id="@+id/tab_newspaper_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_tab_background"
        android:elevation="6dp"
        android:minHeight="?attr/actionBarSize"
        app:tabBackground="@drawable/tab_color_selector"
        app:tabGravity="fill"
        app:tabMode="fixed"
        app:tabSelectedTextColor="@color/color_tab_background"
        app:tabTextAppearance="@style/MyTabLayoutText"
        app:tabTextColor="@color/color_tab_text"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/pager_newspaper"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tab_newspaper_layout"
        android:layout_marginTop="?attr/actionBarSize"
        />

    <Button
        android:id="@+id/btn_archive"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_gravity="right"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="4dp"
        android:background="@drawable/button_style"
        android:text="@string/btn_archive_rus"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent" />



</android.support.constraint.ConstraintLayout>
