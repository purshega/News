<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.design.widget.TabLayout
        android:id="@+id/tab_newspaper_layout_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_tab_background"
        android:elevation="6dp"
        android:minHeight="?attr/actionBarSize"
        app:tabBackground="@drawable/tab_color_selector"
        app:tabGravity="fill"
        app:tabMode="fixed"
        app:tabSelectedTextColor="@color/color_tab_background"
        app:tabTextAppearance="@style/MyTabLayoutText"
        app:tabTextColor="@color/color_tab_text"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/pager_newspaper_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tab_newspaper_layout_2"
        />

</android.support.constraint.ConstraintLayout>